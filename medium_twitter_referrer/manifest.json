{
    "manifest_version":2,
    "name":"Medium Freeifier",
    "version": "1.0",
    "description":"Read Unlimited Premium Posts In Medium.\n The headache of switching to Incognito is No more.. ",

    "browser_action":{
        "default_popup": "popup.html",
        "default_title": "Medium Freeifier"
    },
    "background":{
        "scripts": ["background_twitter.js"],
        "persistent": true
    
    },
    
    "permissions": [
        "contextMenus",
        "cookies",
        "storage",
        "activeTab",
        "webRequest",
        "<all_urls>",
        "tabs",
        "webRequestBlocking"
      ]
}